<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment">

    <TextView
        android:id="@+id/comparisonImageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Captured Image"
        android:textColor="#AA9F9F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"
        android:gravity="center"/>

    <!--card with image classified-->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:background="@drawable/image_border"
        app:layout_constraintTop_toBottomOf="@+id/comparisonImageTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/image_classified" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/resultLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imageCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <!--label with classification result-->
        <TextView
            android:id="@+id/confidence_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#AA9F9F"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/classified_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#AA9F9F"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/comparisonImageLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/comparison_image"
        android:textColor="#AA9F9F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottomImageCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!--card with comparison image-->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomImageCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:background="@drawable/image_border"
        app:layout_constraintTop_toBottomOf="@+id/resultLinearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/comparisonImageView"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/comparison_Image" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>