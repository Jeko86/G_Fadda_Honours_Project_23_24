<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/image_border">

        <ImageView
            android:layout_width="370sp"
            android:layout_height="370sp"
            android:adjustViewBounds="true"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            android:contentDescription="@string/image_classified" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/classified_as"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/classified"
        android:layout_below="@id/imageCardView"
        android:layout_marginTop="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#AA9F9F"
        android:textStyle="bold"
        android:textSize="27sp"
        android:id="@+id/classified_result"
        android:layout_below="@id/classified" />

    <TextView
        android:id="@+id/confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classified_result"
        android:layout_centerHorizontal="true"
        android:text="@string/Confidence"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp" />

    <TextView
        android:id="@+id/confidence_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confidence"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#AA9F9F"
        android:textStyle="bold"
        android:textSize="27sp" />

</RelativeLayout>

