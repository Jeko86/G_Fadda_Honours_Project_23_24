<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment">

    <TextView
        android:id="@+id/comparisonImageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Captured Image"
        android:textColor="#AA9F9F"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/image_border">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/image_classified" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomImageCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:background="@drawable/image_border">

        <ImageView
            android:id="@+id/comparisonImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/comparison_Image" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageCardView"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/confidence_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/classified_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="27sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/bottomImageCardView"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comparison Image"
            android:textColor="#AA9F9F"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</RelativeLayout>



